
import pandas as pd

# 1. Load Dataset
sales_df = pd.read_csv('C:\\Users\\User\\Downloads\\sales_data (1).csv')

# 2. Basic Aggregations

# Total Revenue
total_revenue = sales_df["Total_Sales"].sum()

# Total Customers
total_customers = sales_df["Customer_ID"].nunique()

# Average Order Value
average_order_value = sales_df["Total_Sales"].mean()

# 3. Customer-wise Aggregation
customer_sales = sales_df.groupby("Customer_ID")["Total_Sales"].sum()

# Top Customer
top_customer = customer_sales.idxmax()
top_customer_value = customer_sales.max()

# 4. Pivot Table (Region vs Product)
pivot_table = pd.pivot_table(
    sales_df,
    values="Total_Sales",
    index="Region",
    columns="Product",
    aggfunc="sum"
)

# 5. CUSTOMER SALES ANALYSIS REPORT
print("CUSTOMER SALES ANALYSIS REPORT")
print(f"Total Revenue: ₹{total_revenue:,.0f}")
print(f"Total Customers: {total_customers}")
print(f"Average Order Value: ₹{average_order_value:,.0f}")
print(f"Top Customer: {top_customer} - ₹{top_customer_value:,.0f}")

print("\nSALES SUMMARY (PIVOT TABLE)")
print(pivot_table)
